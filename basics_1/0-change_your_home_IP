#!/usr/bin/env bash

# Backup the /etc/hosts file before making changes
sudo cp /etc/hosts /etc/hosts.bak

# Modify /etc/hosts to update localhost and facebook.com resolution
echo "127.0.0.2 localhost" | sudo tee -a /etc/hosts > /dev/null
echo "8.8.8.8 facebook.com" | sudo tee -a /etc/hosts > /dev/null

# Notify the user that the changes have been made
echo "localhost now resolves to 127.0.0.2 and facebook.com resolves to 8.8.8.8"
